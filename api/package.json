{
  "name": "am-com682-api",
  "version": "1.0.0",
  "description": "COM682 Azure Functions API with JWT Authentication",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "migrate": "npm run build && node dist/scripts/run-migrations.js",
    "prestart": "npm run clean && npm run build",
    "start": "func start",
    "dev": "npm run build && func start",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.5.0",
    "@azure/storage-blob": "^12.17.0",
    "applicationinsights": "^2.9.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^10.0.2",
    "sharp": "^0.33.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mssql": "^9.1.4",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^1.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
